<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FCF7F6"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/cardview_mbti_detail_design3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mbti_image"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="60dp"
                android:padding="5dp"

                android:transitionName="mbti_image_detail"
                app:srcCompat="@drawable/mbti_image_entp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mbti_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/happiness_sans_title"
                    android:text="ENTP"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/mbti_info"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ef_diary"
                    android:text="ENTP\n 뭐든 잘함\n 밥 좋아함\n 방학언제하지\n그렇다면 개학은?\n고민을 좀함\n"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>